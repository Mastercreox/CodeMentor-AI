{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@codementor/shared/*": ["packages/shared/src/*"],
      "@codementor/types/*": ["packages/types/src/*"]
    }
  },
  "include": [
    "packages/**/*",
    "services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/types" },
    { "path": "./services/api-gateway" },
    { "path": "./services/auth-service" },
    { "path": "./services/user-profile-service" },
    { "path": "./services/llm-service" },
    { "path": "./services/code-explainer-service" },
    { "path": "./services/error-analyzer-service" },
    { "path": "./services/language-tutor-service" },
    { "path": "./services/web-client" }
  ]
}