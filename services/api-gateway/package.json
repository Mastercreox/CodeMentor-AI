{
  "name": "@codementor/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for CodeMentor AI microservices",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:property": "jest --testPathPattern=property",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@codementor/shared": "^1.0.0",
    "@codementor/types": "^1.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "http-proxy-middleware": "^2.0.6",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/compression": "^1.7.0",
    "@types/jest": "^29.5.0",
    "fast-check": "^3.13.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}